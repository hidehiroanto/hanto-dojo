#!/bin/sh

GUNICORN_LOG=/var/log/gunicorn
MODEL_PATH=/opt/LiquidAI/LFM2-350M-GGUF/LFM2-350M-Q4_0.gguf

find /challenge -type d -exec chmod 00755 {} \;
find /challenge -type f -exec chmod 644 {} \;

cd /opt/llama.cpp/build/bin
./llama-server --port 1337 -m $MODEL_PATH -c 0 --temp 0 --top-k 0 --top-p 1.0 --min-p 0.0 &

export PYTHONDONTWRITEBYTECODE=1
mkdir -p $GUNICORN_LOG
cd /challenge
gunicorn -b :80 --access-logfile $GUNICORN_LOG/access.log --log-file $GUNICORN_LOG/error.log -D app:app
